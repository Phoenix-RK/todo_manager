<main class="TodoPageMain">
  <article>
    <h1 class="TodoPage-title">My Todo-list</h1>
    <section class="AddTodo">
      <input class="AddTodo-text" type="text" placeholder="Enter next todo">
      <input class="AddTodo-date" type="date">
      <input class="AddTodo-button" type="button" value="Add">
    </section>

    <%= render partial: "todo-section", locals:
    {
      section_title: "Overdue",
      #todos: Todo.all.filter {|todo| todo.overdue?},
      todos: Todo.overdue,
      show_date: true
    }%>
    <%= render partial: "todo-section", locals:
    {
      section_title: "Due today",
      #todos: Todo.all.filter {|todo| todo.due_today?},
      todos: Todo.due_today,
      show_date: false
    }%>
    <%= render partial: "todo-section", locals:
    {
      section_title: "Due later",
      #todos: Todo.all.filter {|todo| todo.due_later?},
      todos: Todo.due_later,
      show_date: true
    }%>
  </article>
</main>
